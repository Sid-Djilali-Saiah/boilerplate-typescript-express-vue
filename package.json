{
  "name": "ts-node-app",
  "version": "0.0.1",
  "license": "MIT",
  "repository": "git@github.com:Sid-Djilali-Saiah/boilerplate-typescript-express-vue",
  "author": "Sid DJILALI SAIAH & Abderrahim CHERKAOUI",
  "description": "Base backend with NodeJS, Express, TypeORM.",
  "tags": [
    "orm",
    "typeorm",
    "typescript",
    "typescript-orm",
    "typeorm-sample",
    "typeorm-example",
    "ts-node-app",
    "ts-boilerplate",
    "node-boilerplate",
    "express-boilerplate"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node -r tsconfig-paths/register ./build/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpileOnly --ignore-watch node_modules src/index.ts",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migrations": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js 'migration:run'",
    "migrate": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js 'migration:generate' -n",
    "test": "jest"
  },
  "dependencies": {
    "@sentry/node": "5.15.5",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.15.4",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.1.0",
    "reflect-metadata": "0.1.13",
    "tsyringe": "^4.2.0",
    "typeorm": "0.2.24",
    "uuidv4": "^6.0.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/node": "^13.13.5",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^5.0.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "25",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^3.8.3"
  }
}
